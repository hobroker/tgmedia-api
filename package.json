{
  "name": "tgmedia-api",
  "version": "2.1.0",
  "private": true,
  "description": "Tgmedia API",
  "license": "MIT",
  "author": "Igor Leahu <igor.leahu24@gmail.com>",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0 --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "cli:dev": "ts-node -r tsconfig-paths/register src/cli/index.ts",
    "cli": "node dist/cli/index.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@jc21/radarr-api": "^0.1.1",
    "@nestjs/common": "9.1.4",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "9.1.4",
    "@nestjs/platform-express": "9.1.4",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/terminus": "^9.1.2",
    "@prisma/client": "^4.4.0",
    "axios": "^0.21.1",
    "axios-retry": "^3.2.4",
    "commander": "^9.4.1",
    "input": "^1.0.1",
    "nest-commander": "^3.1.0",
    "ramda": "^0.28.0",
    "reflect-metadata": "0.1.13",
    "telegram": "^2.12.8",
    "typescript-memoize": "^1.1.1"
  },
  "devDependencies": {
    "@eclass/semantic-release-docker": "^3.0.1",
    "@nestjs/cli": "9.1.4",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.4",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "4.17.14",
    "@types/jest": "29.1.2",
    "@types/luxon": "^3.0.1",
    "@types/node": "18.8.3",
    "@types/node-telegram-bot-api": "^0.57.1",
    "@types/ramda": "^0.28.15",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.1",
    "jest": "29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ]
  }
}
